{
  "name": "gshark",
  "version": "0.0.1",
  "description": "MWS Cup 2017",
  "main": "app.js",
  "repository": "git@github.com:koki-sato/gshark.git",
  "author": "Koki Sato",
  "license": "MIT",
  "scripts": {
    "build": "run-p build:css build:js",
    "build:css": "run-s compile:css optimize:css",
    "build:js": "webpack --display-error-details",
    "compile:css": "node-sass src/styles/app.scss ../public/style.css",
    "optimize:css": "postcss ../public/style.css -c postcss.config.js -o ../public/style.css",
    "format": "run-p format:*",
    "format:css": "prettier --parser scss --single-quote --write 'src/styles/**/*.scss'",
    "format:js": "prettier --single-quote --no-semi --trailing-comma all --write 'src/javascripts/**/*.js'",
    "watch": "run-p watch:css watch:js",
    "watch:css": "node-sass -w src/styles/app.scss ../public/style.css",
    "watch:js": "webpack --watch"
  },
  "dependencies": {
    "chart.js": "^2.7.0",
    "jquery": "^3.2.1",
    "moment": "^2.18.1",
    "react": "^16.0.0",
    "react-bootstrap": "^0.31.3",
    "react-chartjs-2": "^2.6.2",
    "react-datetime": "^2.10.2",
    "react-dom": "^16.0.0",
    "react-fontawesome": "^1.6.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "postcss-flexbugs-fixes": "^3.2.0",
    "prettier": "^1.7.4",
    "webpack": "^3.6.0"
  }
}
